#!/usr/bin/env python

#!/usr/bin/env python

import RPi.GPIO as GPIO
from mfrc522 import SimpleMFRC522

reader = SimpleMFRC522()

try:
        id = reader.read_id()
        uid = (hex(id).upper()[2:10]) #passo a hexadecimal de 8 xifres la id
        print(uid)
finally:
        GPIO.cleanup()
